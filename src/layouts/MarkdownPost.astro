---
import BlogPost from "./BlogPost.astro";
const { frontmatter } = Astro.props;
---

<BlogPost title={frontmatter.title}>
	<a
		href="javascript:history.back()"
		class="p-2 font-semibold rounded-md shadow-md bg-button-dark text-button-light hover:bg-black dark:bg-button-light dark:text-button-dark dark:hover:bg-zinc-200"
	>
		&larr; Back</a
	>
	<section
		class="flex flex-wrap pt-4 pb-8 mt-6 mb-10 border-b border-dashed sm:justify-between border-zinc-300 dark:border-zinc-800"
	>
		<div class="md:max-w-sm">
			<h1 class="my-2 text-4xl font-bold tracking-tight">
				{frontmatter.title}
			</h1>
			<p class="mt-2 mb-4"><em>{frontmatter.description}</em></p>
			<p>
				<span class="mr-1 font-semibold">Author:</span>
				{frontmatter.author}
			</p>
			<p>
				<span class="mr-1 font-semibold">Published:</span>
				{
					new Date(frontmatter.pubDate).toDateString().slice(4, 10) +
						", " +
						new Date(frontmatter.pubDate).toDateString().slice(10, 15)
				}
			</p>
			<div class="flex my-2">
				<p class="mt-2 mr-1 font-semibold">Tags:</p>
				<div class="flex flex-wrap">
					{
						frontmatter.tags.map((tag) => {
							return (
								<p class="px-2 py-1 m-1 rounded-sm bg-zinc-200 dark:bg-button-dark">
									{tag.toLowerCase()}
								</p>
							);
						})
					}
				</div>
			</div>
		</div>
		<img
			class="mt-4 rounded-md bg-zinc-950 dark:bg-zinc-800 sm:w-1/2 h-min"
			src={frontmatter.image.url}
			alt={frontmatter.image.alt}
		/>
	</section>
	<slot />
</BlogPost>
