---
const { title, tagTitle, backButton } = Astro.props;
import { Fragment } from "astro/jsx-runtime";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body
		class="px-5 mx-auto antialiased xl:px-0 md:max-w-6xl bg-light-background text-light-foreground dark:bg-dark-background dark:text-dark-foreground"
	>
		<Navbar />
		<section>
			{
				backButton ? (
					<a
						href="javascript:history.back()"
						class="p-2 font-semibold rounded-md shadow-md bg-button-dark text-button-light hover:bg-black dark:bg-button-light dark:text-button-dark dark:hover:bg-zinc-200"
					>
						&larr; Back
					</a>
				) : (
					<span />
				)
			}

			<div class="flex items-center gap-2 my-12">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					width="40"
					height="40"
					viewBox="0 0 64 64"
					version="1.1"
					xmlns:xlink="http://www.w3.org/1999/xlink"
					><path
						id="SvgjsPath3009"
						d="M4 15.51a1 1 0 0 0 .71-.29L15.22 4.71a1 1 0 1 0-1.42-1.42L3.29 13.8a1 1 0 0 0 0 1.42 1 1 0 0 0 .71.29zm0 11.38a1 1 0 0 0 .71-.29L26.6 4.71a1 1 0 1 0-1.42-1.42L3.29 25.18a1 1 0 0 0 0 1.42 1 1 0 0 0 .71.29zm0 11.36a1 1 0 0 0 .71-.25L38 4.71a1 1 0 1 0-1.42-1.42L3.29 36.54a1 1 0 0 0 0 1.42 1 1 0 0 0 .71.29zm0 11.38a1 1 0 0 0 .71-.29L49.34 4.71a1 1 0 1 0-1.42-1.42L3.29 47.92a1 1 0 0 0 0 1.42 1 1 0 0 0 .71.29zM60.71 3.29a1 1 0 0 0-1.42 0l-56 56a1 1 0 0 0 0 1.42 1 1 0 0 0 1.42 0l56-56a1 1 0 0 0 0-1.42zm-1.42 11.37L14.66 59.29a1 1 0 0 0 0 1.42 1 1 0 0 0 1.42 0l44.63-44.63a1 1 0 0 0-1.42-1.42zm0 11.34L26 59.29a1 1 0 0 0 0 1.42 1 1 0 0 0 1.42 0l33.29-33.25A1 1 0 0 0 59.29 26zm0 11.4L37.4 59.29a1 1 0 0 0 0 1.42 1 1 0 0 0 1.42 0l21.89-21.89a1 1 0 0 0-1.42-1.42zm0 11.38L48.78 59.29a1 1 0 0 0 0 1.42 1 1 0 0 0 1.42 0L60.71 50.2a1 1 0 0 0-1.42-1.42z"
						data-name="Layer 9"
						fill="rgb(255, 123, 0)"
						class="svgFill"></path></svg
				>
				<h1
					class="text-3xl font-bold tracking-tight dark:border-zinc-800 border-zinc-200 md:text-4xl lg:text-5xl"
				>
					{
						tagTitle ? (
							<span>
								Posts tagged with{" "}
								<span class="text-transparent bg-clip-text dark:bg-gradient-to-r dark:from-purple-600 dark:via-purple-500 dark:to-purple-400 bg-gradient-to-r from-orange-500 via-orange-400 to-amber-400">
									{tagTitle}
								</span>
							</span>
						) : (
							<span class="">{title}</span>
						)
					}
				</h1>
			</div>
			<slot />
		</section>
		<Footer />
	</body>
</html>

<style>
	:global(.dark) .svgFill {
		fill: rgb(168 85 247);
	}
</style>
